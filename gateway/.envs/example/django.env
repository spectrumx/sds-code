# limit to 40 characters
SVI_SERVER_API_KEY=

# SENTRY
# ------------------------------------------------------------------------------
SENTRY_DSN=https://00000000000000000000000000000000@o000000.ingest.us.sentry.io/0000000000000000

# BUSINESS LOGIC
# Recommended `False` in production
SDS_NEW_USERS_APPROVED_ON_CREATION=True
