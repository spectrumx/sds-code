# ====================== PRODUCTION ENV ======================
# GENERAL
# ------------------------------------------------------------------------------
# DJANGO_READ_DOT_ENV_FILE=true
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=
DJANGO_ADMIN_URL=
DJANGO_ALLOWED_HOSTS=localhost,sds.crc.nd.edu
SITE_DOMAIN=sds.crc.nd.edu
USE_HTTPS=true

# SECURITY
# ------------------------------------------------------------------------------
# Traefik already redirects users, so we can disable it here:
DJANGO_SECURE_SSL_REDIRECT=false

# OAUTH
# ------------------------------------------------------------------------------
# Set these from your Auth0 application settings
AUTH0_DOMAIN=https://dev-XXXXXXXXXX.us.auth0.com
CLIENT_ID=
CLIENT_SECRET=

# EMAIL SERVER
# ------------------------------------------------------------------------------
# institution whitelisted server email host
# https://docs.djangoproject.com/en/4.2/ref/settings/#email-backend
DJANGO_EMAIL_HOST=
DJANGO_EMAIL_PORT=25
DJANGO_EMAIL_HOST_USER=
DJANGO_EMAIL_HOST_PASSWORD=
DJANGO_EMAIL_USE_TLS=true

# SENTRY
# ------------------------------------------------------------------------------
# You can differentiate between staging and production environments here
SENTRY_ENVIRONMENT=production
# SENTRY_DSN=https://00000000000000000000000000000000@o000000.ingest.us.sentry.io/0000000000000000

# DJANGO-ALLAUTH
# ------------------------------------------------------------------------------
DJANGO_ACCOUNT_ALLOW_REGISTRATION=true

# ðŸš¨ðŸš¨ðŸš¨ PRODUCTION ENV ðŸš¨ðŸš¨ðŸš¨

# GUNICORN
# ------------------------------------------------------------------------------
# Gunicorn relies on the operating system to provide all of the load balancing when
# handling requests. Generally we recommend (2 x $num_cores) + 1 as the number of
# workers to start off with. While not overly scientific, the formula is based on
# the assumption that for a given core, one worker will be reading or writing from
# the socket while the other worker is processing a request.
WEB_CONCURRENCY=4

# disable persistent db connections when using ASGI
CONN_MAX_AGE=0

# REDIS
# ------------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# CELERY
# ------------------------------------------------------------------------------

# FLOWER
# Use `openssl rand -hex 32` to generate a random password
CELERY_FLOWER_USER=celery-admin
CELERY_FLOWER_PASSWORD=

# SPECTRUMX VISUALIZATIONS INTERFACE
# ------------------------------------------------------------------------------
# (this is needed by the SVI to communicate with the SDS to pull user's SDK API tokens;
# the below two environment variables should also be set in the SVI's environment variables)
SVI_SERVER_EMAIL=svi-server@spectrumx.crc.nd.edu
# Important: must be 40 characters
SVI_SERVER_API_KEY=

# OPENSEARCH
# ------------------------------------------------------------------------------
OPENSEARCH_USER=django
OPENSEARCH_PASSWORD=
OPENSEARCH_PORT=9200
OPENSEARCH_HOST=opensearch
OPENSEARCH_CA_CERTS=/app/opensearch/data/certs/root-ca.pem
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=false

# BUSINESS LOGIC
# ------------------------------------------------------------------------------
SDS_NEW_USERS_APPROVED_ON_CREATION=false

# VISUALIZATIONS
# ------------------------------------------------------------------------------
# Enable or disable the visualizations feature (defaults to true if not set)
VISUALIZATIONS_ENABLED=true

# ðŸš¨ðŸš¨ðŸš¨ PRODUCTION ENV ðŸš¨ðŸš¨ðŸš¨

# DOWNLOADS
# ------------------------------------------------------------------------------
# Maximum size of downloads via web interface in bytes (default: 5GB)
# 5 * 1024 * 1024 * 1024
MAX_WEB_DOWNLOAD_SIZE = 5368709120

# MATPLOTLIB
# ------------------------------------------------------------------------------
MPLCONFIGDIR=/tmp/.config/matplotlib

# BRANDING
# ------------------------------------------------------------------------------
# Custom branding for each SDS site

# Branded site name; short, human-facing; may be combined with "SDS" like:
# <BRANDED_SITE_NAME> SDS.
# (e.g. "Haystack", "CRC")
SDS_BRANDED_SITE_NAME=Streeling

# Full institution name
# (e.g. "Massachusetts Institute of Technology", "University of Notre Dame").
SDS_FULL_INSTITUTION_NAME=Streeling University

# Short institution name (e.g. "MIT", "ND").
SDS_SHORT_INSTITUTION_NAME=SU

# Programmatic site name, unique across all deployments (e.g. `haystack`, `crc`).
SDS_PROGRAMMATIC_SITE_NAME=streeling

# Fully qualified domain name for SDK and (future) federation communications; unique
# across all deployments (e.g. `merrimack.haystack.nd.edu`, `sds.crc.nd.edu`).
SDS_SITE_FQDN=streeling.example.com

# Brand image path for navbar and page backgrounds
# Must be a local static path (e.g., /images/brand-bg.jpg)
# External URLs (http://, https://) are not allowed for security reasons
# Leave empty or set to empty string to disable branding image
SDS_BRAND_IMAGE_PATH=
